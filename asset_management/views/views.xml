<odoo>
  <data>

    <record model="ir.ui.view" id="asset_management.list">
      <field name="name">asset_management list</field>
      <field name="model">asset.management</field>
      <field name="arch" type="xml">
        <tree>
           <field name="name"/>
           <field name="serial_num"/>
           <field name="mac_address"/>
           <field name="state"/>
        </tree>
      </field>
    </record>

      <record id="view_form_asset" model="ir.ui.view">
        <field name="name">Asset Management Form</field>
        <field name="model">asset.management</field>
        <field name="arch" type="xml">
          <form string="Asset Management">
            <header>
                <button string="Active" type="object" name="active_action" states="new" class="oe_highlight"/>
                <button string="Deprecated" type="object" name="deprecated_action" states="new,active" class="oe_highlight"/>
              <field name="state" widget="statusbar"/>
            </header>
            <sheet>
              <h1><field name="name" readonly="1"/></h1>
              <group string="Asset Information">
                <group >
                  <field name="related_assets" attrs="{'readonly': [['id','!=',False]]}" domain="[('is_tracked','=', False)]"
                         required="1" modifiers="{'readonly':[('id','!=',false)]}"/>
                  <field name="serial_num" modifiers="{'readonly':[('id','!=',false)]}"/>
                  <field name="mac_address" modifiers="{'readonly':[('id','!=',false)]}"/>
                </group>
                <group>
                  <field name="assigned_employee" attrs="{'invisible': [('is_assigned_to_employee', '=', False)], 'required': [('is_assigned_to_employee', '=', True)]}"/>
                  <field name="is_assigned_to_employee"/>
                  <field name="is_related_asset_tracked" />
                </group>
              </group>
              <field name="notes"/>
            </sheet>
            <div class="oe_chatter">
             <field name="message_follower_ids" widget="mail_followers"/>
             <field name="message_ids" widget="mail_thread"/>
            </div>
          </form>
        </field>
      </record>

      <record id="sequence_id" model="ir.sequence">
          <field name="name">Asset Management</field>
          <field name="code">asset.management</field>
          <field name="prefix">Asset - </field>
          <field name="padding">3</field>
      </record>


     <record id="isTracked_account" model="ir.ui.view">
        <field name="name">account.template.asset.form.inherit</field>
        <field name="model">account.asset.asset</field>
        <field name="inherit_id" ref="om_account_asset.view_account_asset_asset_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='category_id']" position="after">
                <field name="is_tracked"/>
            </xpath>
        </field>
      </record>

  </data>
</odoo>
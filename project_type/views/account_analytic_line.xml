<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_account_analytic_line_form_timesheet_type_inherit" model="ir.ui.view">
        <field name="name">view.account.analytic.line.form.timesheet.type.inherit</field>
        <field name="model">account.analytic.line</field>
        <field name="groups_id" eval="[(4, ref('project.group_project_manager'))]"/>
        <field name="priority">100</field>
        <field name="inherit_id" ref="hr_timesheet.hr_timesheet_line_form"/>
        <field name="arch" type="xml">
            <xpath expr="/form/*" position="before">
                <header>
                       <button name="button_done" string="Done"  class="oe_highlight" type="object" states ="draft,done"/>
                       <button name="button_submitted" string="Submitted"  class="oe_highlight" type="object"  states ="draft,submitted" domain="[('state','=','submitted')]" />
                        <button name="button_approved" string="Approved" type="object"  class="oe_highlight"  states =",draft,approved" domain="[('state','=','approved')]"/>
                        <button name="button_rejected" string="Rejected" type="object" class="oe_highlight" states ="draft,rejected"  domain="[('state','=','rejected')]"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,submitted,approved,rejected"/>
                </header>
                <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                </div>
            </xpath>
            <field name="name" position="replace">
                <field name="name" attrs="{'required': [('type_id', '=', 'unassigned')]}"/>
                <field name="type_id" />
                <field name="work_place" />
                <field name="reason"  attrs="{'required':[('state', '=', 'rejected')]}"/>
            </field>
        </field>
    </record>

    <record id="hr_timesheet_line_search" model="ir.ui.view">
        <field name="name">account.analytic.line.search</field>
        <field name="model">account.analytic.line</field>
        <field name="inherit_id" ref="hr_timesheet.hr_timesheet_line_search"/>
        <field name="arch" type="xml">
            <field name="task_id" position="after">
                <field name="type_id"/>
                <field name="work_place"/>
            </field>
        </field>
    </record>

    <record id="tree_timesheet" model="ir.ui.view">
        <field name="name">account.analytic.line.tree.hr_timesheet</field>
        <field name="model">account.analytic.line</field>
        <field name="inherit_id" ref="hr_timesheet.hr_timesheet_line_tree"/>
        <field name="arch" type="xml">
        <xpath expr="//tree" position="replace">
                <from  string="Timesheet Activities" import="false">
                    <field name="date"/>
                    <field name="name"/>
                    <field name="project_id" required="1"/>
                    <field name="task_id" context="{'default_project_id': project_id}" domain="[('project_id', '=', project_id)]"/>
                    <field name="unit_amount" widget="timesheet_uom" sum="Total"/>
                </from>
        </xpath>
        </field>
    </record>
</odoo>

<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="hr_visas_tree_view" model="ir.ui.view">
        <field name="name">Visas</field>
        <field name="model">hr.visas</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Visas">
                <field name="travel_id"/>
                <field name="valid_form"/>
                <field name="valid_till"/>
                <field name="multiple_entry"/>
                <field name="cost"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="hr_visas_form_view" model="ir.ui.view">
        <field name="name">Visas</field>
        <field name="model">hr.visas</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Visas">
                <header>
                    <button string="Visa Applied" name="action_visa_applied" type="object" states="pending" class="oe_highlight"/>
                    <button string="Visa Issued" name="action_visa_issued" type="object" states="applied" class="oe_highlight"/>
                    <button string="Visa Rejected" name="action_visa_rejected" type="object" states="applied" class="oe_highlight"/>
                    <button string="Cancelled" name="action_cancel" type="object" states="draft,applied,issued" class="oe_highlight"/>
                    <field name="state" widget="statusbar" class="oe_highlight" statusbar_visible="draft,applied,issued,rejected,cancelled"/>
                </header>
                <sheet>
                    <group string="Visa Information">
                        <group>
                            <field name="travel_id" required="1" domain="[['state','=','hr_approved']]" attrs="{'readonly': [('state','=', 'issued')]}"/>
                            <field name="multiple_entry" attrs="{'invisible': [('state','in','pending')], 'readonly': [('state','=', 'issued')]}"/>
                            <field name="cost" attrs="{'invisible': [('state','in','pending')], 'required': [('state','=', 'applied')], 'readonly': [('state','=', 'issued')]}"/>
                        </group>
                        <group>
                            <field name="valid_form" attrs="{'invisible': [('state','in','pending')], 'required': [('state','=', 'applied')]}"/>
                            <field name="valid_till" attrs="{'invisible': [('state','in','pending')], 'required': [('state','=', 'applied')]}"/>
                            <field name="visa" string="Visa" attrs="{'invisible': [('state','in','pending')], 'readonly': [('state','=', 'issued')]}"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                    <field name="activity_ids" widget="mail_activity"/>
                </div>
            </form>
        </field>
    </record>

    <record id="visa_search_view" model="ir.ui.view">
        <field name="name">Visa</field>
        <field name="model">hr.visas</field>
        <field name="arch" type="xml">
            <search string="Visa">
                <field name="travel_id"/>
                <field name="state"/>
                <group string="Group By">
                    <filter name="travel_id" string="Travel" context="{'group_by':'travel_id'}"/>
                    <filter name="state" string="Status" context="{'group_by':'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="visa_graph_view" model="ir.ui.view">
        <field name="name">Visa</field>
        <field name="model">hr.visas</field>
        <field name="type">graph</field>
        <field name="arch" type="xml">
            <graph string="Visa" orientation="horizontal" type="bar">
                <field name="travel_id"/>
                <field name="state"/>
            </graph>
        </field>
    </record>

    <record id="employee_visas_menu_action" model="ir.actions.act_window">
        <field name="name">Visas</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.visas</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form,graph</field>
    </record>

    <menuitem name="Visas"
              id="hr_employee_pending_visas_menu"
              parent="travel_awarded_hr_employee_menu"
              action="employee_visas_menu_action"
              sequence="2"/>
</odoo>
<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="hr_visas_tree_view" model="ir.ui.view">
        <field name="name">Visas</field>
        <field name="model">hr.visas</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Visas">
                <field name="travel_visas"/>
                <field name="state"/>
                <field name="cost"/>
                <field name="valid_form"/>
                <field name="valid_till"/>
                <field name="multiple_entry"/>
            </tree>
        </field>
    </record>

    <record id="hr_visas_form_view" model="ir.ui.view">
        <field name="name">Visas</field>
        <field name="model">hr.visas</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Visas">
                <header>
                    <field name="state" widget="statusbar" class="oe_highlight" statusbar_visible="draft,pending,applied,issued,rejected"/>
                    <button string="Visa Applied" name="action_visa_applied" type="object" states="draft" class="oe_highlight"/>
                    <button string="Visa Issued" name="action_visa_issued" type="object" states="applied" class="oe_highlight"/>
                    <button string="Visa Rejected" name="action_visa_rejected" type="object" states="applied" class="oe_highlight"/>
                </header>
                <sheet>
                    <group string="Visa Information">
                        <group>
                            <field name="travel_visas" required="1" domain="[['state','=','company_approved']]"/>
                            <field name="multiple_entry" attrs="{'invisible': [('state','in',['pending','applied'])]}"/>
                            <field name="cost" attrs="{'invisible': [('state','in',['pending','applied'])]}"/>
                        </group>
                        <group>
                            <field name="valid_form" attrs="{'invisible': [('state','in',['pending','applied'])]}"/>
                            <field name="valid_till" attrs="{'invisible': [('state','in',['pending','applied'])]}"/>
                            <field name="visa" string="Visa" attrs="{'invisible': [('state','in',['pending','applied'])]}"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                    <field name="activity_ids" widget="mail_activity"/>
                </div>
            </form>
        </field>
    </record>

    <record id="employee_visas_menu_action" model="ir.actions.act_window">
        <field name="name">Visas</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.visas</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Visas"
              id="hr_employee_visas_menu"
              parent="travel_hr_employee_menu"
              action="employee_visas_menu_action"
              sequence="50"/>

    <record id="employee_all_visas_action" model="ir.actions.act_window">
        <field name="name">All Visas</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.visas</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="All"
              id="hr_employee_all_visas_menu"
              parent="hr_employee_visas_menu"
              action="employee_all_visas_action"
              sequence="55"/>

    <record id="employee_pending_visas_action" model="ir.actions.act_window">
        <field name="name">pending Visas</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.visas</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('state', '=', 'pending')]</field>
    </record>

    <menuitem name="Pending"
              id="hr_employee_pending_visas_menu"
              parent="hr_employee_visas_menu"
              action="employee_pending_visas_action"
              sequence="60"/>
</odoo>
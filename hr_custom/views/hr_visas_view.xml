<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="hr_visas_tree_view" model="ir.ui.view">
        <field name="name">Visas</field>
        <field name="model">hr.visas</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Visas">
                <field name="employee_id"/>
                <field name="reason_for_travel"/>
                <field name="country_id"/>
                <field name="valid_form"/>
                <field name="valid_till"/>
                <field name="multiple_entry"/>
                <field name="cost"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="hr_visas_form_view" model="ir.ui.view">
        <field name="name">Visas</field>
        <field name="model">hr.visas</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Visas">
                <header>
                    <button string="Submit" name="action_submit" type="object" states="draft" class="oe_highlight"/>
                    <button string="Visa Applied" name="action_visa_applied" type="object" states="submitted" class="oe_highlight"/>
                    <button string="Visa Issued" name="action_visa_issued" type="object" states="applied" class="oe_highlight"/>
                    <button string="Visa Rejected" name="action_visa_rejected" type="object" states="submitted,applied" class="oe_highlight"/>
                    <field name="state" widget="statusbar" class="oe_highlight" statusbar_visible="draft,submitted,applied,issued,rejected"/>
                </header>
                <sheet>
                    <group string="Visa Information">
                        <group>
                            <field name="employee_id" required="1" attrs="{'readonly': [('state','=', 'issued')]}"/>
                            <field name="reason_for_travel" required="1"/>
                            <field name="percentage_ids" attrs="{'invisible': [('reason_for_travel','not in', ('project', 'business_dev'))]}">
                                <tree editable="bottom">
                                     <field name="visa_id" invisible="1"/>
                                     <field name="project_id" attrs="{'column_invisible': [('parent.reason_for_travel', '!=', 'project')]}"/>
                                     <field name="lead_id" attrs="{'column_invisible': [('parent.reason_for_travel', '!=', 'business_dev')]}"/>
                                     <field name="percentage"/>
                                </tree>
                            </field>
                            <field name="analytic_id" attrs="{'required': [('reason_for_travel', 'in', ('visa_renewal', 'other'))], 'invisible':[('reason_for_travel', 'not in', ('visa_renewal', 'other'))]}"/>
                            <field name="other_info" attrs="{'required':[('reason_for_travel', '=', 'other')], 'invisible': [('reason_for_travel','!=', 'other')]}"/>
                            <field name="officer_user_id" invisible="1"/>
                            <field name="project_manager" invisible="1"/>
                        </group>
                        <group>
                            <field name="country_id" required="1"/>
                            <field name="multiple_entry" groups="hr_custom.group_visa_officer"/>
                            <field name="valid_form"/>
                            <field name="valid_till"/>
                            <field name="cost" required="1" groups="hr_custom.group_visa_officer"/>
                            <field name="visa" string="Visa" groups="hr_custom.group_visa_officer"/>
                        </group>
                    </group>
                    <field name="reject_des" attrs="{'invisible': [('state','in',['draft','issued'])]}"/>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                    <field name="activity_ids" widget="mail_activity"/>
                </div>
            </form>
        </field>
    </record>

    <record id="visa_search_view" model="ir.ui.view">
        <field name="name">Visa</field>
        <field name="model">hr.visas</field>
        <field name="arch" type="xml">
            <search string="Visa">
                <field name="state"/>
                <field name="employee_id"/>
                <field name="reason_for_travel"/>
                <field name="country_id"/>
                <group string="Group By">
                    <filter name="state" string="Status" context="{'group_by':'state'}"/>
                    <filter name="employee_id" string="Employee" context="{'group_by':'employee_id'}"/>
                    <filter name="reason_for_travel" string="Reason for travel" context="{'group_by':'reason_for_travel'}"/>
                    <filter name="country_id" string="Country" context="{'group_by':'country_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="visa_graph_view" model="ir.ui.view">
        <field name="name">Visa</field>
        <field name="model">hr.visas</field>
        <field name="type">graph</field>
        <field name="arch" type="xml">
            <graph string="Visa" orientation="horizontal" type="bar">
                <field name="state"/>
                <field name="employee_id"/>
                <field name="reason_for_travel"/>
                <field name="country_id"/>
            </graph>
        </field>
    </record>

    <record id="employee_visas_menu_action" model="ir.actions.act_window">
        <field name="name">Visas</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.visas</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form,graph</field>
    </record>

    <menuitem name="Visas"
              id="hr_employee_pending_visas_menu"
              parent="travel_awarded_hr_employee_menu"
              action="employee_visas_menu_action"
              sequence="2"/>
</odoo>
<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="hr_ticket_tree_view" model="ir.ui.view">
        <field name="name">Tickets</field>
        <field name="model">hr.tickets</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Tickets">
                <field name="travel_id"/>
                <field name="ticket_num"/>
                <field name="type"/>
                <field name="departure_date"/>
                <field name="return_date"/>
                <field name="price" sum="Total"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="hr_tickets_form_view" model="ir.ui.view">
        <field name="name">Tickets</field>
        <field name="model">hr.tickets</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Tickets">
                <header>
                    <button string="Ticket Cancelled" name="action_cancel" type="object" states="issued" class="oe_highlight"/>
                    <button string="Ticket Issued" name="travel_update_ticket_status" type="object" states="draft" class="oe_highlight"/>
                    <field name="state" widget="statusbar" class="oe_highlight" statusbar_visible="draft,issued,cancelled"/>
                </header>
                <sheet>
                    <group string="Ticket Information">
                        <group>
                            <field name="travel_id" required="1" attrs="{'readonly': [('state','=', 'issued')]}"/>
                            <field name="type" required="1" attrs="{'readonly': [('state','=', 'issued')]}"/>
                            <field name="ticket_num" attrs="{'readonly': [('state','=', 'issued')]}"/>
                            <field name="airline" required="1" attrs="{'readonly': [('state','=', 'issued')]}"/>
                        </group>
                        <group>
                            <field name="departure_date" required="1"/>
                            <field name="return_date" required="1"/>
                            <field name="price" required="1" attrs="{'readonly': [('state','=', 'issued')]}"/>
                            <field name="ticket" string="Ticket" attrs="{'readonly': [('state','=', 'issued')]}"/>
                        </group>
                    </group>
                    <field name="notes" placeholder="Enter your note here..."/>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                    <field name="activity_ids" widget="mail_activity"/>
                </div>
            </form>
        </field>
    </record>

    <record id="ticket_search_view" model="ir.ui.view">
        <field name="name">Tickets</field>
        <field name="model">hr.tickets</field>
        <field name="arch" type="xml">
            <search string="Ticket">
                <field name="travel_id"/>
                <field name="ticket_num"/>
                <field name="airline"/>
                <field name="type"/>
                <field name="state"/>
                <group string="Group By">
                    <filter name="travel_id" string="Travel" context="{'group_by':'travel_id'}"/>
                    <filter name="ticket_num" string="Ticket Number" context="{'group_by':'ticket_num'}"/>
                    <filter name="airline" string="Airline" context="{'group_by':'airline'}"/>
                    <filter name="type" string="Type" context="{'group_by':'type'}"/>
                    <filter name="state" string="Status" context="{'group_by':'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="ticket_graph_view" model="ir.ui.view">
        <field name="name">Tickets</field>
        <field name="model">hr.tickets</field>
        <field name="type">graph</field>
        <field name="arch" type="xml">
            <graph string="Ticket" orientation="horizontal" type="bar">
                <field name="travel_id"/>
                <field name="ticket_num"/>
                <field name="airline"/>
                <field name="type"/>
                <field name="state"/>
            </graph>
        </field>
    </record>

    <record id="employee_all_tickets_action" model="ir.actions.act_window">
        <field name="name">Tickets</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.tickets</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form,graph</field>
    </record>

    <menuitem name="Tickets"
              id="hr_employee_all_menu"
              parent="travel_awarded_hr_employee_menu"
              action="employee_all_tickets_action"
              sequence="40"/>

</odoo>
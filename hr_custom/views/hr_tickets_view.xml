<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="hr_ticket_tree_view" model="ir.ui.view">
        <field name="name">Tickets</field>
        <field name="model">hr.tickets</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Tickets">
                <field name="travel_ticket"/>
                <field name="state"/>
                <field name="price"/>
                <field name="type"/>
                <field name="ticket_num"/>
                <field name="departure_date"/>
                <field name="return_date"/>
            </tree>
        </field>
    </record>

    <record id="hr_tickets_form_view" model="ir.ui.view">
        <field name="name">Tickets</field>
        <field name="model">hr.tickets</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Tickets">
                <header>
                    <button string="Ticket Cancelled" name="action_cancel" type="object" states="draft,pending" class="oe_highlight"/>
                    <button string="Ticket Issued" name="action_issued" type="object" states="draft,pending" class="oe_highlight"/>
                    <field name="state" widget="statusbar" class="oe_highlight" statusbar_visible="draft,pending,issued,cancelled"/>
                </header>
                <sheet>
                    <group string="Ticket Information">
                        <group>
                            <field name="travel_ticket" required="1" domain="[['state','=','company_approved']]"/>
                            <field name="type"/>
                            <field name="ticket_num" attrs="{'invisible':[('state', '=', 'pending')]}" required="1"/>
                            <field name="airline" attrs="{'invisible':[('state', '=', 'pending')]}"/>
                        </group>
                        <group>
                            <field name="departure_date" attrs="{'invisible':[('state', '=', 'pending')]}"/>
                            <field name="return_date" attrs="{'invisible':[('state', '=', 'pending')]}"/>
                            <field name="price" attrs="{'invisible':[('state', '=', 'pending')]}"/>
                        </group>
                    </group>
                    <group>
                        <field name="ticket" string="Ticket" attrs="{'invisible':[('state', '=', 'pending')]}"/>
                        <field name="notes" attrs="{'invisible':[('state', '=', 'pending')]}" placeholder="Enter your note here..."/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                    <field name="activity_ids" widget="mail_activity"/>
                </div>
            </form>
        </field>
    </record>

    <menuitem name="Tickets"
              id="hr_employee_tickets_menu"
              parent="travel_hr_employee_menu"
              sequence="20"/>

    <record id="employee_all_tickets_action" model="ir.actions.act_window">
        <field name="name">All Tickets</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.tickets</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="All"
              id="hr_employee_all_menu"
              parent="hr_employee_tickets_menu"
              action="employee_all_tickets_action"
              sequence="25"/>

    <record id="employee_pending_tickets_action" model="ir.actions.act_window">
        <field name="name">Pending Tickets</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.tickets</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('state', '=', 'pending')]</field>
    </record>

    <menuitem name="Pending"
              id="hr_employee_pending_menu"
              parent="hr_employee_tickets_menu"
              action="employee_pending_tickets_action"
              sequence="30"/>
</odoo>
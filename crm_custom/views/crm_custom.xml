<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="crm_opportunity_form_view" model="ir.ui.view">
        <field name="name">crm.lead.opportunity.view</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_form_view_oppor"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="before">
                <field name="team_member" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True}" style="display: inline;"/>
                <field name="owner" required="1"/>
                <field name="id" invisible="1"/>
                <field name="analytic_id" attrs="{'invisible': [('id','=', False)]}"/>
            </xpath>
            <xpath expr="//field[@name='team_id']" position="after">
                <field name="stakeholder_ids" widget="many2many_tags">
                     <tree>
                         <field name="name"/>
                         <field name="relationship"/>
                     </tree>
                </field>
            </xpath>
            <xpath expr="//notebook/page[@name='lead']" position="after">
                <page name="doc" string="Document">
                    <group>
                        <field name="document" widget="url" placeholder="Paste SharePoint Folder's URL"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <record id="view_partner_form_id" model="ir.ui.view">
        <field name="name">res.partner.view.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='website']" position="after">
                <field name="industry"/>
                <field name="linked_in" widget="url"/>
            </xpath>
            <xpath expr="//field[@name='vat']" position="before">
                <field name="relationship"/>
            </xpath>
        </field>
    </record>

    <record id="crm_companies_action" model="ir.actions.act_window">
        <field name="name">Companies</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="view_type">form</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[('is_company','=', True)]</field>
    </record>

    <menuitem id="res_partner_companies_customer"
            name="Companies"
            parent="crm.crm_menu_sales"
            action="crm_companies_action"
            sequence="10"/>

    <record id="crm_contacts_action" model="ir.actions.act_window">
        <field name="name">Contacts</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="view_type">form</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[('is_company','=', False)]</field>
    </record>

    <menuitem id="res_partner_contacts_customer"
            name="Contacts"
            parent="crm.crm_menu_sales"
            action="crm_contacts_action"
            sequence="20"/>

    <menuitem id="crm_lead_opportunities"
            name="Opportunities"
            parent="crm.crm_menu_sales"
            sequence="25"/>

    <record id="crm_my_opportunities_action" model="ir.actions.act_window">
        <field name="name">My Opportunities</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">crm.lead</field>
        <field name="view_type">form</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[('type', '=', 'opportunity')]</field>
        <field name="context">{ 'default_type': 'opportunity', 'default_user_id': uid, 'search_default_assigned_to_me': 1}</field>
    </record>

    <menuitem id="my_opportunities_menu"
            name="My Opportunities"
            parent="crm_lead_opportunities"
            action="crm_my_opportunities_action"
            sequence="30"/>

    <record id="crm_team_opportunities_action" model="ir.actions.act_window">
        <field name="name">Team Opportunities</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">crm.lead</field>
        <field name="view_type">form</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'search_default_my_favorites': 1}</field>
    </record>

    <menuitem id="team_opportunities_menu"
            name="Team Opportunities"
            parent="crm_lead_opportunities"
            action="crm_team_opportunities_action"
            sequence="35"/>

</odoo>